<div class="container text-center bg-light card">
    <form action="/message" method="post">
        <h1 class="text text-primary">Contact Us</h1>
        <div class="form-group mb-3">
            <div class="row">
                <div class="col-1"><i class="bi bi-person-fill"></i></div>
                <div class="col-11"><input class="form-control G" type="text" name="firstname" id=""
                        placeholder="First name" required>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <div class="row">
                <div class="col-1">
                    <i class="bi bi-person-fill"></i>

                </div>
                <div class="col-11">
                    <input class="form-control G" type="text" name="lastname" id="" placeholder="Last name" required>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <div class="row">
                <div class="col-1">
                    <i class="bi bi-envelope-fill"></i>
                </div>
                <div class="col-11">
                    <input class="form-control G" type="email" name="email" id="" placeholder="Email" required>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <div class="row">
                <div class="col-1">
                    <i class="bi bi-phone-fill"></i>

                </div>
                <div class="col-11">
                    <input class="form-control G" type="tel" name="phone" id="" placeholder="Phone" required>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <div class="row">
                <div class="col-1">
                    <i class="bi bi-chat-fill"></i>

                </div>
                <div class="col-11">
                    <input class="form-control G" type="text" name="message" id="" placeholder="Message" required>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <input class="btn btn-primary " type="submit" value="Send">
        </div>
    </form>
</div>